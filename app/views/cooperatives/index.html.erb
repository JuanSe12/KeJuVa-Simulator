<p id="notice"><%= notice %></p>

<h1>Listado De Cooperativas</h1>

<div class="bs-example widget-shadow" data-example-id="contextual-table"> 
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @cooperatives.each do |cooperative| %>
      <tr>
        <td><%= cooperative.nombre %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Acciones
            </button>
            <div class="dropdown-menu">
              <center>
                <%= link_to 'Detalle', cooperative, class: 'btn btn-info' %>
                <br>
                <div class="dropdown-divider"></div>
                <%= link_to 'Editar', edit_cooperative_path(cooperative), class: 'btn btn-warning' %>
                <br>
                <div class="dropdown-divider"></div>
                <%= link_to 'Eliminar', cooperative, method: :delete, data: { confirm: 'Estas Segur@?' }, class: 'btn btn-danger' %>
              </center>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Agregar Cooperativa', new_cooperative_path, class: 'btn btn-primary' %>