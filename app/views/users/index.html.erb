<p id="notice"><%= notice %></p>

<h1>Listado De Usuarios</h1>

<div class="bs-example widget-shadow" data-example-id="contextual-table"> 
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Numero</th>
      <th>Tipo Documento</th>
      <th>Documento</th>
      <th>Email</th>
      <th>Edad</th>
      <th>Cooperativa</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre %></td>
        <td><%= user.apellido %></td>
        <td><%= user.numero %></td>
        <td><%= user.tipo_documentp %></td>
        <td><%= user.documento %></td>
        <td><%= user.email %></td>
        <td><%= user.edad %></td>
        <td><%= user.cooperative.nombre %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Acciones
            </button>
            <div class="dropdown-menu">
              <center>
                <%= link_to 'Detalle', user, class: 'btn btn-info' %>
                <br>
                <div class="dropdown-divider"></div>
                <%= link_to 'Editar', edit_user_path(user), class: 'btn btn-warning' %>
                <br>
                <div class="dropdown-divider"></div>
                <%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Estas Segur@?' }, class: 'btn btn-danger' %>
              </center>
            </div>
          </div>      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Agregar Usuario', new_user_path, class: 'btn btn-primary' %>
