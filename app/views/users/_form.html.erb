<h4>Formulario Usuarios</h4>
<div class="form-three widget-shadow">
  <div class=" panel-body-inputin">
    <%= form_for(@user, :html => {:id => "checkout-form", :class => "form-horizontal", :novalidate => "novalidate"}) do |f| %>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.text_field :nombre, :class => "form-control1", :placeholder => "Ingrese Nombre" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.text_field :apellido, :class => "form-control1", :placeholder => "Ingrese Apellido" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.number_field :numero, :class => "form-control1", :placeholder => "Ingrese Numero" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.number_field :tipo_documentp, :class => "form-control1", :placeholder => "Ingrese Tipo Documento" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.number_field :documento, :class => "form-control1", :placeholder => "Ingrese #Documento" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.text_field :email, :class => "form-control1", :placeholder => "Ingrese Email" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.text_field :password, :class => "form-control1", :placeholder => "Ingrese Contraseña" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.text_field :password_confirmation, :class => "form-control1", :placeholder => "Confirme su contraseña" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col col-4">
        <div class="input-group">             
            <span class="input-group-addon">
              <i class="icon-prepend fa fa-keyboard-o" aria-hidden="true"></i>
            </span>
            <%= f.number_field :edad, :class => "form-control1", :placeholder => "Ingrese Edad" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="selector1" class="col-sm-2 control-label">Cooperativa</label>
          <div class="col-sm-8">
          <%= f.collection_select :cooperative_id, Cooperative.all, :id, :nombre, {prompt: 'Seleccione Cooperativa'}, { id: 'selector1', class: 'form-control1' } %>
          </div>
      </div>
      <center>
      <div class="actions">
        <%= f.submit 'Aceptar',  class: "btn btn-primary"   %>
      </div>
      </center>
    <% end %>
  </div>
</div>
